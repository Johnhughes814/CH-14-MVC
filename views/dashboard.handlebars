<div class="row center">
    <h4>Welcome {{posts.[0].user.username}}</h4>
    <a href="/dashboard/new"><button type="button" class="btn">Create Post</button></a>
</div>

{{#if posts.length}}
<div class="row">
    <h5 class="center">{{posts.[0].user.username}}'s Posts</h5>
    <hr style="height: 0.6rem; background-color:#0ef7a9; color:#19af6b; border-width: 0; border-radius: 0.2rem">
    {{#each posts as |post|}}
    <div class="col l3">
        {{> dashData post}}
    </div>
    {{/each}}
</div>
{{/if}}